extend loginlayout 
block content 
    body.dash 
        .container-login 
            .container 
                h1 Farm Manager Login
                form(action='/login' method='POST')
                    h4.sign-in Login Here!
                    
                    br    
                    .form-floating
                        small#error1
                        input#exampleInputEmail1.form-control(type='email' name='email' aria-describedby='emailHelp' placeholder='Email Address')
                    br
                    .form-floating
                        small#error2
                        input#exampleInputPassword1.form-control(type='password' name='password' placeholder='Password')
                    br
                    button.btn.btn-primary(type='submit') Login
